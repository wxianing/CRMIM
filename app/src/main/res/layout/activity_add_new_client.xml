<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/submit_item_top"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_submit_setting"
                    android:text="客  户  名：" />

                <EditText
                    android:id="@+id/customer_name"
                    style="@style/sub_editext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/submit_item_top"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_submit_setting"
                    android:text="客户电话：" />

                <EditText
                    android:id="@+id/customer_phone"
                    style="@style/sub_editext" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_submit_setting"
                    android:text="所在省份：" />

                <EditText
                    android:id="@+id/province"
                    style="@style/sub_editext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/submit_item_top"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_submit_setting"
                    android:text="城  市  名：" />

                <EditText
                    android:id="@+id/city_name"
                    style="@style/sub_editext" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/submit_item_top"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_submit_setting"
                    android:text="联  系  人：" />

                <EditText
                    android:id="@+id/linkman"
                    style="@style/sub_editext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/submit_item_top"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_submit_setting"
                    android:text="手机号码：" />

                <EditText
                    android:id="@+id/linkman_phone"
                    style="@style/sub_editext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/submit_item_top"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_submit_setting"
                    android:text="电子邮箱：" />

                <EditText
                    android:id="@+id/e_mail"
                    style="@style/sub_editext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/submit_item_top"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_submit_setting"
                    android:text="客户地址：" />

                <EditText
                    android:id="@+id/customer_address"
                    style="@style/sub_editext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/submit_item_top"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_submit_setting"
                    android:text="经营范围：" />

                <EditText
                    android:id="@+id/sellArea"
                    style="@style/sub_editext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/submit_item_top"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview_submit_setting"
                    android:text="备        注：" />

                <EditText
                    android:id="@+id/remark"
                    style="@style/sub_editext" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
