<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <TextView
            style="@style/textview_submit_setting"
            android:text="客户名称：" />

        <EditText
            android:id="@+id/customer_name"
            style="@style/sub_editext"
            android:gravity="right"
            android:hint="必填" />

    </LinearLayout>

    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <TextView
            style="@style/textview_submit_setting"
            android:text="性别：" />

        <EditText
            android:id="@+id/sex_et"
            style="@style/sub_editext"
            android:focusable="false"
            android:gravity="right"
            android:hint="" />

    </LinearLayout>


    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <TextView
            style="@style/textview_submit_setting"
            android:text="工作电话：" />

        <EditText
            android:id="@+id/linkman_phone"
            style="@style/sub_editext"
            android:gravity="right"
            android:hint="必填"
            android:inputType="number" />

    </LinearLayout>

    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <TextView
            style="@style/textview_submit_setting"
            android:text="部门：" />

        <EditText
            android:id="@+id/department"
            style="@style/sub_editext"
            android:gravity="right"
            android:hint="选填" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <TextView
            style="@style/textview_submit_setting"
            android:text="职位：" />

        <EditText
            android:id="@+id/positions"
            style="@style/sub_editext"
            android:gravity="right"
            android:hint="选填" />

    </LinearLayout>

    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <TextView
            style="@style/textview_submit_setting"
            android:text="邮箱：" />

        <EditText
            android:id="@+id/e_mail"
            style="@style/sub_editext"
            android:gravity="right"
            android:hint="选填" />

    </LinearLayout>

    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <TextView
            style="@style/textview_submit_setting"
            android:text="QQ：" />

        <EditText
            android:id="@+id/qq_et"
            style="@style/sub_editext"
            android:gravity="right"
            android:hint="选填"
            android:inputType="number" />

    </LinearLayout>

    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <TextView
            style="@style/textview_submit_setting"
            android:text="年龄：" />

        <EditText
            android:id="@+id/age_et"
            style="@style/sub_editext"
            android:gravity="right"
            android:hint="选填"
            android:inputType="number" />

    </LinearLayout>

    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <TextView
            style="@style/textview_submit_setting"
            android:text="备注：" />

        <EditText
            android:id="@+id/remark"
            style="@style/sub_editext"
            android:gravity="right"
            android:hint="选填" />

    </LinearLayout>

    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <TextView
            style="@style/textview_submit_setting"
            android:text="所属公司/医院：" />

        <EditText
            android:id="@+id/company_et"
            style="@style/sub_editext"
            android:focusable="false"
            android:gravity="right"
            android:hint="必填" />

    </LinearLayout>

</LinearLayout>
