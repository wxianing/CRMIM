<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY"
        android:src="@mipmap/logo_text" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/linear_shape"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username_edittext"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_transing"
            android:drawableLeft="@mipmap/user_img"
            android:hint="手机/邮箱"
            android:paddingLeft="@dimen/dp5"
            android:textColor="@color/textcolor_gray"
            android:textColorHint="@color/textcolor_gray"
            android:textSize="@dimen/sp14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="#DBDBDB" />

        <EditText
            android:id="@+id/password_edittext"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_transing"
            android:drawableLeft="@mipmap/mm_normal"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@color/textcolor_gray"
            android:textColorHint="@color/textcolor_gray"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pwdlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:gravity="center"
        android:padding="@dimen/dp5">

        <CheckBox
            android:id="@+id/checked_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="记住密码"
            android:textColor="@color/textcolor_gray"
            android:textSize="@dimen/sp13" />

    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/login_btn_shape"
        android:text="登      录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp5"
            android:padding="@dimen/dp5"
            android:text="我要注册"
            android:textColor="@color/textcolor_gray" />

        <View
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:background="@color/textcolor_gray" />

        <TextView
            android:id="@+id/forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:padding="@dimen/dp5"
            android:text="忘记密码"
            android:textColor="@color/textcolor_gray" />
    </LinearLayout>

</LinearLayout>