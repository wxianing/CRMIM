<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp5">

    <RelativeLayout
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp5">

        <TextView
            android:id="@+id/submit_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交项目：" />

        <TextView

            android:layout_marginRight="@dimen/dp5"
            android:id="@+id/msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/submit_date"
            android:layout_toRightOf="@+id/submit_project"
            android:textColor="@color/textcolor_orange" />

        <TextView
            android:id="@+id/submit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="" />

    </RelativeLayout>

    <Button
        android:id="@+id/add_documents"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/status_layout"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/btn_blue_bg"
        android:text="添加文档"
        android:textColor="@color/white" />

</RelativeLayout>