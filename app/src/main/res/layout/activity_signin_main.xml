<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    tools:context=".activity.CustomerVisitActivity">

    <include
        android:id="@+id/title_bar"
        layout="@layout/titlebar_right_image" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1200dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:padding="@dimen/dp10"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/header_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/headerphoto" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="请确认签到相关信息无误"
                        android:textColor="@color/textcolor_gray"
                        android:textSize="@dimen/sp13" />

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/horizontal_full_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/time_icon" />

                    <TextView
                        android:id="@+id/date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        android:text="星期四   2016.08.20" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/calendar_icon" />

                    <TextView
                        android:id="@+id/curr_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight="1"
                        android:text="当前时间：11:32" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linear_shape"
                    android:padding="@dimen/dp10">

                    <LinearLayout
                        android:id="@+id/map_linear"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="2">

                        <com.baidu.mapapi.map.MapView
                            android:id="@+id/bmapView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusable="false" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/curr_local"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="当前所在的位置：" />

                        <TextView
                            android:id="@+id/address_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/curr_local"
                            android:layout_marginTop="@dimen/dp5"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="福田区八卦三路301"
                            android:textColor="@color/textcolor_gray" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/address_trim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="查看历史拜访记录"
                            android:textColor="#59A4E3" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/custome_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cust_related"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:text="拜访信息"
                    android:textColor="#FF933A"
                    android:textSize="@dimen/sp14" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/ashen_while" />

                <TextView
                    android:id="@+id/proj_related"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="项目信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/custome_message_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/customer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:id="@+id/customer_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/address_icon"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/customer_icon"
                        android:text="联系人：" />

                    <EditText
                        android:id="@+id/customer_name"
                        style="@style/sub_editext"
                        android:layout_toLeftOf="@+id/arror_right_img"
                        android:layout_toRightOf="@+id/name_tv"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:gravity="right"
                        android:hint="点击选择" />


                </RelativeLayout>

                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:id="@+id/customer_phone_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/customer_phone_icon"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/customer_phone_icon"
                        android:text="联系电话：" />

                    <EditText
                        android:id="@+id/phone_num"
                        style="@style/sub_editext"
                        android:layout_toLeftOf="@+id/arror_right_img"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="点击输入" />

                </LinearLayout>

                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dp10">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/customer_phone_icon"
                        android:text="医院：" />

                    <EditText
                        android:id="@+id/hospital_name"
                        style="@style/sub_editext"
                        android:layout_toLeftOf="@+id/arror_right_img"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="点击输入" />

                </LinearLayout>

                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp50"
                    android:background="@color/white"
                    android:padding="@dimen/dp10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/customer_phone_icon"
                        android:text="科室：" />

                    <EditText
                        android:id="@+id/department"
                        style="@style/sub_editext"
                        android:layout_toLeftOf="@+id/arror_right_img"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="点击输入" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dp10"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/customer_phone_icon"
                        android:text="职务：" />

                    <EditText
                        android:id="@+id/zhiwu_et"
                        style="@style/sub_editext"
                        android:layout_toLeftOf="@+id/arror_right_img"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="点击输入" />

                </LinearLayout>


            </LinearLayout>

            <include layout="@layout/horizontal_line" />

            <LinearLayout
                android:id="@+id/project_related"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp50"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:visibility="gone">

                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="@dimen/dp10"-->
                <!--android:text="项目信息"-->
                <!--android:textSize="@dimen/sp13" />-->
                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dp10">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/customer_phone_icon"
                        android:text="医院：" />

                    <EditText
                        android:id="@+id/hospital"
                        style="@style/sub_editext"
                        android:layout_toLeftOf="@+id/arror_right_img"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:gravity="right"
                        android:hint="点击选择" />

                </LinearLayout>

                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dp10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/customer_phone_icon"
                        android:text="科室：" />

                    <EditText
                        android:id="@+id/department_name"
                        style="@style/sub_editext"
                        android:layout_toLeftOf="@+id/arror_right_img"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="点击输入" />

                </LinearLayout>

                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="项目名称：" />

                    <EditText
                        android:id="@+id/edittext_project_name"
                        style="@style/sub_editext"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:hint="点击选择" />

                    <ImageView
                        android:id="@+id/add_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp5"
                        android:src="@mipmap/add_icon" />

                </LinearLayout>

                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="项目领域：" />

                    <TextView
                        android:id="@+id/direction"
                        style="@style/sub_editext"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="end"
                        android:hint="点击选择"
                        android:maxLines="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arrow_right"
                        android:visibility="gone" />

                </LinearLayout>


                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="项目内容：" />

                    <EditText
                        android:id="@+id/edittext_project_content"
                        style="@style/sub_editext"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:hint="点击填写" />

                </LinearLayout>

                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="机型:" />

                    <EditText
                        android:id="@+id/type_select"
                        style="@style/sub_editext"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="end"
                        android:hint="点击填写"
                        android:maxLines="1" />

                </LinearLayout>


                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="数量：" />

                    <EditText
                        android:id="@+id/count_et"
                        style="@style/sub_editext"
                        android:gravity="end"
                        android:hint="点击填写"
                        android:inputType="number" />
                </LinearLayout>

                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="项目的时间计划：" />

                    <EditText
                        style="@style/sub_editext"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:hint="点击填写" />

                </LinearLayout>

                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="项目的关键人：" />

                    <EditText
                        android:id="@+id/related_personnel"
                        style="@style/sub_editext"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:gravity="end"
                        android:hint="点击填写" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10"
                    android:visibility="gone">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="项目金额:" />

                    <EditText
                        android:id="@+id/edittext_total_price"
                        style="@style/sub_editext"
                        android:gravity="end"
                        android:hint="点击输入"
                        android:inputType="numberDecimal" />

                </LinearLayout>


                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="我的成单率：" />

                    <EditText
                        android:id="@+id/edittext_success_rate"
                        style="@style/sub_editext"
                        android:focusable="false"
                        android:gravity="end"
                        android:hint="点击选择" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10"
                    android:visibility="gone">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="所属地区：" />

                    <EditText
                        android:id="@+id/project_area"
                        style="@style/sub_editext"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:gravity="end"
                        android:hint="点击选择" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arrow_right"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10"
                    android:visibility="gone">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="项目相关人员：" />

                    <EditText

                        style="@style/sub_editext"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="end"
                        android:hint="点击选择"
                        android:maxLines="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arrow_right"
                        android:visibility="gone" />
                </LinearLayout>

                <include layout="@layout/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <TextView
                        style="@style/textview_submit_setting"
                        android:text="备注:" />

                    <EditText
                        android:id="@+id/remark"
                        style="@style/sub_editext"
                        android:gravity="end"
                        android:hint="选填" />
                </LinearLayout>

                <include layout="@layout/horizontal_line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/default_background_color"
        android:padding="@dimen/dp5">

        <Button
            android:id="@+id/save_btn"
            style="@style/oange_button"
            android:text="提交我的拜访" />

    </LinearLayout>
</RelativeLayout>
