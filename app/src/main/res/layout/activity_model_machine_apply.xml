<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.meidp.crmim.activity.ModelMachineApplyActivity">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_marginTop="@dimen/submit_item_top"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_submit_setting"
                android:text="标题:" />

            <EditText
                android:id="@+id/title_et"
                style="@style/sub_editext"
                android:gravity="end"
                android:hint="点击填写"
                android:textColorHint="@color/tc_gray" />

        </LinearLayout>

        <include layout="@layout/horizontal_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_submit_setting"
                android:text="样机名:" />

            <TextView
                android:id="@+id/prototype_et"
                style="@style/sub_editext"
                android:layout_weight="1"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="end"
                android:hint="点击选择"
                android:maxLines="1"
                android:textColorHint="@color/tc_gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right"
                android:visibility="gone" />

        </LinearLayout>

        <include layout="@layout/horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_submit_setting"
                android:text="客户名:" />

            <EditText
                android:id="@+id/customer_et"
                style="@style/sub_editext"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="end"
                android:hint="点击选择"
                android:textColorHint="@color/tc_gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right"
                android:visibility="gone" />

        </LinearLayout>

        <include layout="@layout/horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_marginTop="@dimen/submit_item_top"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_submit_setting"
                android:text="客户电话:" />

            <EditText

                android:id="@+id/cust_tel"
                style="@style/sub_editext"
                android:gravity="end"
                android:hint="点击填写" />

        </LinearLayout>

        <include layout="@layout/horizontal_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_marginTop="@dimen/submit_item_top"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_submit_setting"
                android:text="申请数量:" />

            <EditText
                android:id="@+id/count_et"
                style="@style/sub_editext"
                android:gravity="end"
                android:hint="点击填写" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_marginTop="@dimen/submit_item_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/textview_submit_setting"
                android:text="使用金额:" />

            <EditText
                android:id="@+id/total_money"
                style="@style/sub_editext"
                android:gravity="end"
                android:hint="点击填写" />

        </LinearLayout>

        <include layout="@layout/horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_submit_setting"
                android:text="项目名:" />

            <EditText
                android:id="@+id/project_et"
                style="@style/sub_editext"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="end"
                android:hint="点击选择" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right"
                android:visibility="gone" />

        </LinearLayout>


        <include layout="@layout/horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_marginTop="@dimen/submit_item_top"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_submit_setting"
                android:text="备注:" />

            <EditText
                android:id="@+id/remark_et"
                style="@style/sub_editext"
                android:gravity="end"
                android:hint="点击填写" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/dp5">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_shape"
            android:text="提     交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

    </LinearLayout>


</LinearLayout>
