<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    android:orientation="vertical"
    tools:context="com.meidp.crmim.activity.MyCreditActivity">

    <include layout="@layout/titlebar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp80"
        android:gravity="center_horizontal"
        android:text="因为信用 所以简单" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp80"
        android:padding="@dimen/dp60"
        android:visibility="gone">


        <com.meidp.crmim.view.InstrumentView
            android:id="@+id/iView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/default_background_color" />

        <TextView
            android:id="@+id/txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="50dip"
            android:text="350"
            android:textColor="#ff00d4af"
            android:textSize="40sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp60"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp10"
            android:text="平台后台暂未提供信用分解规则"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/unscramble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp10"
            android:text="信用分解读"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp10">

            <TextView
                android:id="@+id/project_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 申报项目数：" />

            <TextView
                android:id="@+id/complete_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" 已完成项目数：" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp10">

            <TextView
                android:id="@+id/total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 项目总费用：" />

            <TextView
                android:id="@+id/projectGathering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:text=" 项目已收款：" />

            <TextView
                android:id="@+id/projectReimburse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:text=" 项目已报销：" />

            <TextView
                android:id="@+id/start_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:text=" 项目起止时间：" />

            <TextView
                android:id="@+id/credit_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:text="我的诚信度：" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
